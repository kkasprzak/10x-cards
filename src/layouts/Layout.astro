---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
  isMinimal?: boolean;
  isAuthenticated?: boolean;
}

const { title = "10x Astro Starter", isMinimal = false, isAuthenticated = false } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-full flex flex-col bg-background text-foreground">
    <Header variant={isMinimal ? "minimal" : "full"} isAuthenticated={isAuthenticated} />
    <main class="flex-1 bg-gray-100">
      <slot />
    </main>
    {!isMinimal && <Footer />}
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
