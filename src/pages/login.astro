---
import Layout from "../layouts/Layout.astro";
import LoginForm from "../components/auth/LoginForm";
---

<Layout title="Login" isMinimal>
  <div class="flex-1 flex flex-col items-center justify-center py-16 px-4 min-h-[calc(100vh-4rem)]">
    <div class="w-full max-w-[450px] p-8 bg-card rounded-lg border shadow-sm">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-gray-900">Sign in to your account</h2>
        <p class="mt-2 text-sm text-gray-600">
          Or <a href="/register" class="font-medium text-indigo-600 hover:text-indigo-500">create a new account</a>
        </p>
      </div>

      <LoginForm client:load />
    </div>
  </div>
</Layout>
