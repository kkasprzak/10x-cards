---
import Layout from "../layouts/Layout.astro";
import ForgotPasswordForm from "../components/auth/ForgotPasswordForm";
---

<Layout title="Forgot Password" isMinimal>
  <div class="flex-1 flex flex-col items-center justify-center py-16 px-4 min-h-[calc(100vh-4rem)]">
    <div class="w-full max-w-[450px] p-8 bg-card rounded-lg border shadow-sm">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-gray-900">Reset your password</h2>
        <p class="mt-2 text-sm text-gray-600">
          Enter your email address and we&apos;ll send you instructions to reset your password.
        </p>
      </div>

      <ForgotPasswordForm client:load />
    </div>
  </div>
</Layout>
